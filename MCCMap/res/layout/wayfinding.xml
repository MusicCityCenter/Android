<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    

    <EditText
        android:id="@+id/editText_destname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="please input destination"
        android:gravity="center" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView_directionarrow"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText_destname"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow" />

    <ImageView
        android:id="@+id/imageView_mapview"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView_directionarrow"
        android:src="@drawable/passage" />

    <TextView
        android:id="@+id/textView_floornumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_directionarrow"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="22dp"
        android:text="floor #"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/map" />

</RelativeLayout>