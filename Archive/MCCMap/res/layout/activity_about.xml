<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
		android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="To learn more about MCC, follow us in Facebook and Twitter!" />

    <ImageButton
        android:id="@+id/imageButton_facebook"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="17dp"
        android:background="@drawable/facebook_logo" />

    <ImageButton
        android:id="@+id/imageButton_twitter"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignTop="@+id/imageButton_facebook"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/imageButton_facebook"
        android:background="@drawable/twitter_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton_facebook"
        android:layout_marginTop="36dp"
        android:text="Phone: (615) 401-1400" />
    
</RelativeLayout>

</LinearLayout>